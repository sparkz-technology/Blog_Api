{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"], // "plugin:node/recommended" is for nodejs
  "plugins": ["prettier"],
  "rules": {
    //to override the rules of airbnb
    //to check the file use npm eslint file.js --fix
    "prettier/prettier": "error",
    "spaced-comment": "off",
    "no-console": "warn",
    "consistent-return": "off",
    "func-names": "off",
    "object-shorthand": "off",
    "no-process-exit": "off",
    "no-param-reassign": "off",
    "no-return-await": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "prefer-destructuring": ["error", { "object": true, "array": false }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "req|res|next|val" }]
  }
}
